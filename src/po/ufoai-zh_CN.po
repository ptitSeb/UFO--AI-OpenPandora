#: ../base/ufos/research.ufo:1250
msgid "grenl_fle_ammo_txt"
msgstr ""
"25mm 碎片弹弹夹\n"
"\n"
"黄皮书\n"
"\n"
"PHALANX计划\n"
"\n"
"技术文档\n"
